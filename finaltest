import java.io.*;
import java.net.ServerSocket;
import java.net.Socket;
import java.util.Scanner;
import java.util.concurrent.TimeUnit;

public class Main {

    public static void main(String[] args) {
        connect("192.168.1.182");
    }

    public static void connect(String ip) {
        try {
            Socket client = new Socket(ip, 4444);
            System.out.println("(i) connected to (" + ip + ").");
            sendRead(client);
        } catch (IOException e) {
            server(ip);
        }
    }

    public static void server(String ip) {
        try {
            ServerSocket server = new ServerSocket(4444);
            System.out.println("(i) awaiting connection... (" + ip + ") is down.");
            Socket client = server.accept();
            sendRead(client);
        } catch (IOException e) {
            System.out.println("(!!!) io.");
        }
    }

    public static void sendRead(Socket client) {
        try {
            Scanner scan = new Scanner(System.in);
            DataInputStream in = new DataInputStream(client.getInputStream());
            DataOutputStream out = new DataOutputStream(client.getOutputStream());
            new Thread() {
                public void run() {
                    while (true) {
                        try {
                            TimeUnit.SECONDS.sleep(1);
                            System.out.println("message: " + in.readUTF());
                        } catch (IOException e) {
                            System.out.println("(!!!) io.");
                        } catch (InterruptedException e) {
                            System.out.println("(!!!) sleep cycle has been cancelled.");
                        }
                    }
                }
            }.start();
            new Thread() {
                public void run() {
                    try {
                        String msg = scan.nextLine();
                        out.writeUTF(msg);
                    } catch (IOException e) {
                        System.out.println("(!!!) io.");
                    }
                }
            }.start();
        } catch (IOException e) {
            System.out.println("(!!!) io.");
        }
    }
}
