import java.io.*;
import java.net.ServerSocket;
import java.net.Socket;

public class Main {

    public static void main(String[] args) {
        connect("192.168.1.38");
    }

    public static void connect(String ip) {
        try {
            Socket client = new Socket(ip, 4444);
            System.out.println("(i) connected to (" + ip + ").");
            sendRead(client);
        } catch (IOException e) {
            server();
        }
    }

    public static void server() {
        try {
            ServerSocket server = new ServerSocket(4444);
            System.out.println("(i) awaiting connection...");
            Socket client = server.accept();
            System.out.println("(i) incoming connection from (" + client.getRemoteSocketAddress() + ").");
            sendRead(client);
        } catch (IOException e) {
            // TODO: handle
        }
    }

    public static void sendRead(Socket client) {

    }
}
